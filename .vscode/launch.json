{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "SmartQA 디버깅",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
          "main:app",
          "--reload",
          "--port=8000",
          "--host=0.0.0.0"
      ],
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
          "PYTHONPATH": "${workspaceFolder}:${workspaceFolder}/server"
      },
      "cwd": "${workspaceFolder}/server"
    }
  ]
}
